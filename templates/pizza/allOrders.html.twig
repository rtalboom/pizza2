{% extends 'base.html.twig' %}
{% block title %}Your orders!{% endblock %}
{% block body %}
    <div class="container">
        <h2>Orders ({{ orders|length }})</h2>
        <ul class="list-group">
            {% for order in orders %}
                <li class="list-group-item">{{ order.fname }} {{ order.lname }},, <b>{{ order.adress }}
                        , {{ order.zipcode }}</b>,, {{ order.status }},
                    <b>{{ order.pizza.name }}</b>, {{ order.size.name }} </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}